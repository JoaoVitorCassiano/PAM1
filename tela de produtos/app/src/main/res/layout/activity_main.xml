<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/borda"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/texto1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bordadobotao"
            android:padding="30dp"
            android:text="produto 1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/texto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bordadobotao"
            android:padding="30dp"
            android:text="produto 2" />

        <TextView
            android:id="@+id/texto3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bordadobotao"
            android:padding="30dp"
            android:text="produto 3"
            android:layout_below="@id/texto1" />

        <TextView
            android:id="@+id/texto4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bordadobotao"
            android:padding="30dp"
            android:text="produto 4"
            android:layout_below="@id/texto2" />

        <TextView android:id="@+id/texto5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bordadobotao"
            android:padding="30dp"
            android:text="produto 3"
            android:layout_below="@id/texto3" />

        <TextView android:id="@+id/texto6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bordadobotao"
            android:padding="30dp"
            android:text="produto 4"
            android:layout_below="@id/texto4" />

        <Button android:id="@+id/butao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/texto6"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="25dp"
            android:text="colocar no carrinho"
            android:drawableLeft="@drawable/carrinho"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/butao"
            android:text="direitos reservados ao macdonalds"
            android:gravity="center"/>



    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>